<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
 <!--call the avatar to fetch the current user's avatar -->
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
 <!-- use rails image_tag method to create an <img> -->
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
<!-- Checkpoint-47 add a class on the proper header element updated for AJAX -->
           <div class='js-comments-count'><%= pluralize(@user.comments.count, 'comment') %></div>
         </small>
       </div>
     </div>
   </div>
 </div>

<!-- display all user's posts and comments -->
 <h2>Posts</h2>
 <%= render @user.posts %>

 <h2>Comments</h2>
 <%= render @user.comments %>
