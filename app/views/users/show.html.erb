<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
 <!--call the avatar to fetch the current user's avatar -->
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
 <!-- use rails image_tag method to create an <img> -->
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>

<!-- display all user's posts and comments -->
 <h2>Posts</h2>
   <% if @user.user_posts? %>
     <%= render @user.posts %>
       <%else%>
     <p><%= @user.name %> has not submitted any posts yet.</p>
   <%end%>

 <h2>Comments</h2>
    <% if @user.user_comments? %>
      <%= render @user.comments %>
<!-- statement made if user has not contributed -->
   <% else %>
      <h2><%= @user.name %> has not submitted any post yet. </h2>
   <% end %>
<!-- show list of user's favorites-->
<h2>Favorites</h2>
  <% if @user.user_favorites? %>
    <% @user.favorites.each do |favorite| %>
      <%= render partial: 'users/favorite', locals: { post: favorite.post } %>
    <% end %>
  <%else%>
     <p><%= @user.name %> has not assigned any favorites yet.</p>
  <%end%>
