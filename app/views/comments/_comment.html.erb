<!--Assignment-42 adding links to delete post or topic--><div class="media">   <div class="media-body">     <small>       <%#= comment.user.name %> commented <%#= time_ago_in_words(comment.created_at) %> ago       <% if @post %>          | <%= link_to "Delete", [@post, comment], method: :delete %>        <% elsif @topic %>          | <%= link_to "Delete", [@topic, comment], method: :delete %>        <% end %>     </small>     <p><%= comment.body %></p>   </div> </div>