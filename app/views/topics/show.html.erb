<h1><%= @topic.name %></h1>

<% if user_is_authorized_for_topics? %>
  <%= link_to "Edit Topic", edit_topic_path, class: "btn btn-success" %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: "btn btn-danger" %>
<% end %>


<div class="row">
  <div class="col-md-8">
    <p class="lead">
      <%= render partial: "labels/list", locals: {labels: @topic.labels} %>
    <br />
    <%= @topic.description %>
  </p>
<!-- show posts belonging to topic -->
    <% @topic.posts.each do |post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">

            <%= link_to post.title, topic_post_path(@topic, post) %>
            <%= render partial: "labels/list", locals: {labels: post.labels} %>
          </h4>>

          <small>
          submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %> <br>
          <%= post.comments.count %> Comments
        </small>
        </div>
      </div>
    <% end %>
  </div>
  <% if current_user %>
  <div class="col-md-4">
    <%= link_to "New Post", new_topic_post_path(@topic), class: "btn btn-success" %>
  </div>
<%end%>

<!-- Assignment-42 show comments associated with topics-->
</div>
 <div class="row">
  <div class="col-md-8">
    <h1>Label: <%= @comment.name %></h1>
    <% @comment.topics.each do |topic| %>
      <div>
        Topic: <%= link_to topic.name, topic %>
      </div>
    <% end %>
    <% @comment.posts.each do |post| %>
      <div>
        Post: <%= link_to post.title, topic_post_path(post.topic, post) %>
      </div>
    <% end %>
  </div>
</div>
  <% end %>
